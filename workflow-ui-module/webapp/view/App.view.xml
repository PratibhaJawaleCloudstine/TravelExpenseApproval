<mvc:View
    controllerName="travelexpensensp.workflowuimodule.controller.App"
    
    xmlns:core="sap.ui.core"
    xmlns:commons="sap.suite.ui.commons"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:uxap="sap.uxap"
    xmlns:u="sap.ui.unified"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:layout="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns:template="http://schemas.sap.com/sapui5/extension/sap.ui.core.template/1"
    height="100%"
>
    <App id="app">
        <uxap:ObjectPageLayout
            id="_IDGenObjectPageLayout1"
            enableLazyLoading="true"
            useIconTabBar="true"
            showTitleInHeaderContent="true"
            upperCaseAnchorBar="false"
        >
            <uxap:headerTitle>
                <uxap:ObjectPageDynamicHeaderTitle
                    id="_IDGenObjectPageDynamicHeaderTitle1"
                >
                

                    <uxap:expandedContent>
                       
                    </uxap:expandedContent>

                    <uxap:snappedContent>
                        <VBox id="_IDGenVBox2">
                            <Text
                                id="_IDGenText2"
                                text="Travel Request ID: {travelDetails>/travelDetailsId}"
                            />
                            <Text
                                id="_IDGenText221"
                                text="Place Of Visit: {travelDetails>/TravelPlaceOfVisit}"
                            />
                            <Text
                                id="_IDGenText21"
                                text="Travel Start Date: {travelDetails>/TravelStartDate}"
                            />
                            <Text
                                id="_IDGenText22"
                                text="Travel End Date: {travelDetails>/TravelStartDate}"
                            />
                             <Text
                                id="_IDGenText23"
                                text="Travel Departure: {travelDetails>/TravelDeparture}"
                            />
                            <Text
                                id="_IDGenText24"
                                text="Travel Arrival: {travelDetails>/TravelArrival}"
                            />
                          
                        </VBox>
                    </uxap:snappedContent>
                </uxap:ObjectPageDynamicHeaderTitle>
            </uxap:headerTitle>
            <uxap:sections>
                <uxap:ObjectPageSection
                    titleUppercase="false"
                    id="invoice"
                    title="Travel Details"
                >
                    <uxap:subSections>
                        <uxap:ObjectPageSubSection
                            id="_IDGenObjectPageSubSection1"
                        >
                            <uxap:blocks>
                               
                                <form:Form
                                    id="_IDGenForm1"
                                    width="100%"
                                >
                                    <form:layout>
                                        <form:ResponsiveGridLayout
                                            id="_IDGenResponsiveGridLayout1"
                                            labelSpanXL="3"
                                            labelSpanL="3"
                                            labelSpanM="3"
                                            labelSpanS="12"
                                            adjustLabelSpan="false"
                                            emptySpanXL="4"
                                            emptySpanL="4"
                                            emptySpanM="4"
                                            emptySpanS="0"
                                            columnsXL="1"
                                            columnsL="1"
                                            columnsM="1"
                                            singleContainerFullSize="false"
                                        />
                                    </form:layout>
                                    <form:formContainers>
                                        <form:FormContainer
                                            id="Travel"
                                            title="Travel Details"
                                        >
                                            <form:formElements>
                                                <form:FormElement
                                                    id="_IDGenFormElement1"
                                                    label="Place Of Visit"
                                                >
                                                    <form:fields>
                                                        <Text
                                                            text="{travelDetails>/TravelPlaceOfVisit}"
                                                        />
                                                    </form:fields>
                                                </form:FormElement>

                                                <form:FormElement
                                                    id="_IDGenFormElement2"
                                                    label="Start Date"
                                                >
                                                    <form:fields>
                                                        <Text
                                                            text="{travelDetails>/TravelStartDate}"
                                                        />
                                                    </form:fields>
                                                </form:FormElement>
                                                 <form:FormElement
                                                    id="_IDGenFormElement5"
                                                    label="End Date"
                                                >
                                                    <form:fields>
                                                        <Text
                                                            text="{travelDetails>/TravelEndDate}"
                                                        />
                                                    </form:fields>
                                                </form:FormElement>
                                            </form:formElements>
                                        </form:FormContainer>


                                        <form:FormContainer
                                            id="travelAD"
                                            title="Travel A/D Details"
                                        >
                                            <form:formElements>
                                                <form:FormElement
                                                    id="_IDGenFormElement4"
                                                    label="Travel Departure"
                                                >
                                                    <form:fields>
                                                        <Text
                                                            text="{travelDetails>/TravelDeparture}"
                                                        />
                                                    </form:fields>
                                                </form:FormElement>

                                                <form:FormElement
                                                    id="_IDGenFormElement3"
                                                    label="Travel Arrival"
                                                >
                                                    <form:fields>
                                                        <Text
                                                            text="{travelDetails>/TravelArrival}"
                                                        />
                                                    </form:fields>
                                                </form:FormElement>
                                            </form:formElements>
                                        </form:FormContainer>

                              
                                    </form:formContainers>
                                </form:Form>
                            </uxap:blocks>
                        </uxap:ObjectPageSubSection>

                        <uxap:ObjectPageSubSection
                            id="_IDGenObjectPageSubSection2"
                        >
                            <uxap:blocks>
                                <HBox
                                    id="_IDGenHBox1"
                                    width="100%"
                                >
                                    <Table
                                        id="travelExpensesTable"
                                        items="{path: 'travelExpenses>/'}"
                                        width="100%"
                                    >
                                        <columns>
                                           
                                            <Column id="ExpenseTypeColumn">
                                                <Text
                                                    id="ExpenseTypeHeader"
                                                    text="Expense Type"
                                                />
                                            </Column>
                                           
                                            <Column id="receiptAmountColumn">
                                                <Text
                                                    id="receiptAmountHeader"
                                                    text="receipt Amount"
                                                />
                                            </Column>
                                            <Column id="receiptDateColumn">
                                                <Text
                                                    id="receiptDateHeader"
                                                    text="receipt Date"
                                                />
                                            </Column>
                                            
                                            
                                        </columns>
                                        <items>
                                            <ColumnListItem
                                                id="_IDGenColumnListItem1"
                                            >
                                                <cells>
                                                    
                                                    <Text
                                                        id="expenseTypecell"
                                                        text="{travelExpenses>expenseType}"
                                                    />
                                                    
                                                    <Text
                                                        id="receiptAmountcell"
                                                        text="{travelExpenses>receiptAmount}"
                                                    />
                                                    <Text
                                                        id="receiptDatecell"
                                                        text="{travelExpenses>receiptDate}"
                                                    />
                                                 
                                                </cells>
                                            </ColumnListItem>
                                        </items>
                                    </Table>
                                </HBox>
                            </uxap:blocks>
                        </uxap:ObjectPageSubSection>

